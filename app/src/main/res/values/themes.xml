<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyCloud9" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/periwinkle_light</item>
        <item name="colorPrimaryVariant">@color/old_lavender_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/prim_light</item>
        <item name="colorSecondaryVariant">@color/periwinkle_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomNoActionBarTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="CustomToolbarStyle">
        <item name="android:textColorPrimary">?attr/colorSecondaryVariant</item>
        <item name="android:colorControlNormal">?attr/colorSecondaryVariant</item>
    </style>
</resources>